.card-project {
  position: relative;
  width: 100%;
  background-color: var(--color-base-bg);
  border-radius: $card-border-radius;
  overflow: hidden;
  
  .card-thumbnail {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: $card-border-radius;
    overflow: hidden;
    
    a.image-container {
      display: block;
      position: relative;
      width: 100%;
      height: 100%;
      text-decoration: none;
      cursor: pointer;
      
      &:hover {
        .image-overlay {
          opacity: 1;
        }
        
        img {
          transform: scale(1.05);
        }
      }
      
      img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
      }
      
      .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
      
        .image-title {
          color: white;
          font-size: 20px;
          font-weight: 500;
          text-align: center;
          padding: 20px;
          margin: 0;
          text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }
      }
    }
    
    &.card-thumbnail-large {
      @include media-breakpoint-up(md) {
        max-height: 260px;
      }
      @include media-breakpoint-up(xl) {
        max-height: 300px;
      }
    }
  }
}